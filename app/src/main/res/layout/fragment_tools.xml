<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.webmyne.paylabas_affiliate.tools.ToolsFragment">


    <com.webmyne.paylabas_affiliate.custom_components.PagerSlidingTabStrip
        android:id="@+id/toolTabs"

        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_appbar"
        app:pstsPaddingMiddle="true" />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/toolTabs"
        android:layout_alignParentBottom="true"
        android:id="@+id/toolPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity"/>

</RelativeLayout>
